{
  "private": true,
  "name": "memrefinder",
  "description": "GPT-powered File Explorer App to Chat with your documents and files to find answers to your questions",
  "version": "0.0.1",
  "author": "Praveen Palanisamy <praveen.palanisamy@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/praveen-palanisamy/MemReFinder"
  },
  "main": "main/index.js",
  "scripts": {
    "dev": "next renderer",
    "build": "next build renderer",
    "start": "next start renderer",
    "dev:desktop": "npm run build:dekstop && electron .",
    "build:desktop": "npm run clean && npm run build:electron",
    "dist": "npm run build:desktop && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist renderer/.next main/*.js main/**/*.js",
    "build:main": "tsc -p main",
    "build:renderer": "next build renderer",
    "build:electron": "npm run build:renderer && npm run build:main"
  },
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "axios": "^1.2.3",
    "clsx": "^1.2.1",
    "electron-is-dev": "^1.1.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "formidable": "^2.1.1",
    "lodash": "^4.17.21",
    "mammoth": "^1.5.1",
    "next": "13.1.2",
    "node-html-markdown": "^1.3.0",
    "openai": "^3.1.0",
    "pdf-parse": "^1.1.1",
    "postcss": "^8.4.13",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.5",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.7",
    "@heroicons/react": "^2.0.13",
    "@next/font": "13.1.2",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/formidable": "^2.0.5",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/pdf-parse": "^1.1.1",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.2",
    "typescript": "^4.9.4"
  },
  "build": {
    "appId": "com.praveenp.memrefinder",
    "productName": "MemReFinder",
    "files": [
      "main/*.js",
      "renderer"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz",
        "zip"
      ]
    }
  }
}
